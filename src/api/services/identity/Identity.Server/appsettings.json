{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Default": "Information",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {RequestId} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
                "restrictedToMinimumLevel": "Information"
              }
            }
          ]
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "",
    "DistributedCachingConnection": ""
  },
  "AppSettings": {
    "PathBase": "/blog",
    "AppInstance": "blog",
    "DistributedCacheInstance": "sisa-cafe",
    "CorsPolicy": {
      "Origins": ""
    },
    "Certs": {
      "DataProtection": "certs/data-protection",
      "EncryptingSigning": "certs/encrypting-signing"
    },
    "Identity": {
      "Authority": "",
      "Audiences": [
        "identity"
      ],
      "ClientId": "identity",
      "ClientSecret": ""
    },
    "Email": {
      "Smtp": {
        "Host": "",
        "Port": 587,
        "Username": "",
        "Password": ""
      },
      "Sender": {
        "Name": "",
        "Email": ""
      },
      "Contact": {
        "Name": "",
        "Email": ""
      }
    },
    "OpenApi": {
      "Title": "Blog Api Docs",
      "Description": "Blog Api Docs",
      "TermsOfServiceUrl": "https://sisa.io/contact",
      "Contact": {
        "Name": "Sang Au",
        "Email": "sangau@sisa.io",
        "Url": "https://sisa.io/contact"
      },
      "License": {
        "Name": "MIT",
        "Url": "https://opensource.org/license/mit"
      },
      "Identity": {
        "Authority": "",
        "ClientId": "",
        "Scopes": {}
      },
      "Enabled": true,
      "UseGrpc": false,
      "UseSwaggerUI": false
    }
  }
}
