{
  "name": "@sisa/web",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.0.0-rc.53",
  "preferUnplugged": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "configs/*",
    "tools/*"
  ],
  "scripts": {
    "fake-db": "turbo run dev --filter=@sisa/fake-api",
    "dev:identity": "turbo run dev --filter=@sisa/identity",
    "build:identity": "turbo run build --filter=@sisa/identity --no-daemon",
    "dev:email": "turbo run dev --filter=@sisa/email-templates",
    "build:email": "turbo run build --filter=@sisa/email-templates --no-daemon",
    "release:identity": "turbo build --filter=@sisa/identity^... && changeset publish",
    "dev": "turbo run dev",
    "build": "turbo run build --no-daemon",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "gen:protos": "turbo run gen:protos"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@sisa/eslint-config": "workspace:*",
    "@turbo/gen": "^1.10.16",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  }
}
